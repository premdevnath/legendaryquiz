<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quizep">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/qution1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kurale"
                android:text="How to make rich?"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.465" />

            <Button
                android:id="@+id/option11"
                android:layout_width="155dp"
                android:layout_height="55dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#292726"
                android:fontFamily="@font/kurale"
                android:text="Login"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.357"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/qution1" />

            <Button
                android:id="@+id/option12"
                android:layout_width="155dp"
                android:layout_height="55dp"
                android:layout_marginStart="48dp"
                android:backgroundTint="#292726"
                android:fontFamily="@font/kurale"
                android:text="Login"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/option11"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/option11"
                app:layout_constraintTop_toBottomOf="@+id/option11" />

            <Button
                android:id="@+id/option13"
                android:layout_width="155dp"
                android:layout_height="55dp"
                android:layout_marginStart="48dp"
                android:backgroundTint="#292726"
                android:fontFamily="@font/kurale"
                android:text="Login"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/option12"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/option12"
                app:layout_constraintTop_toBottomOf="@+id/option12" />

            <Button
                android:id="@+id/option14"
                android:layout_width="155dp"
                android:layout_height="55dp"
                android:layout_marginStart="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#292726"
                android:fontFamily="@font/kurale"
                android:text="Login"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/option13"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/option13"
                app:layout_constraintTop_toBottomOf="@+id/option13"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toTopOf="@+id/qution1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/pqu" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quiz" />

</androidx.constraintlayout.widget.ConstraintLayout>